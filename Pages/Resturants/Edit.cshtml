@page "{resturantId:int?}"
@model OdeToFood.Pages.Resturants.EditModel
@{
	ViewData["Title"] = "Edit";
}

<h2>Edit @Model.Resturant.Name</h2>

<form method="post">
	<input type="hidden" asp-for="Resturant.Id" />
	<div class="form-group">
		<label asp-for="Resturant.Name"> </label>
		<input asp-for="Resturant.Name" class="form-control" />
	    <span class="text-danger" asp-validation-for="Resturant.Name"></span>
	</div>
	<div class="form-group">
		<label asp-for="Resturant.Location"> </label>
		<input asp-for="Resturant.Location" class="form-control" />
		<span class="text-danger" 
			  asp-validation-for="Resturant.Location"></span>

	</div>
	<div class="form-group">
		<label asp-for="Resturant.CuisineType"> </label>
		<select asp-for="Resturant.CuisineType"
				asp-items="Model.Cuisines"
				class="form-control"></select>
		<span class="text-danger"
			  asp-validation-for="Resturant.CuisineType"></span>
	</div>
	<button type="submit" class="btn btn-primary">Save</button>
</form>
@section Scripts{ 
	<partial name="_ValidationScriptsPartial" />

}


